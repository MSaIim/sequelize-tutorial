{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../dist/server",
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "types": ["node"],
    "lib": ["es2020", "dom"]
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "./tsconfig.server.json"]
}
